@model IEnumerable<Learning_site.Models.Assignment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assignments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>


            <td>
                <button class="btn btn-primary ">@Html.ActionLink("Download", "Download", "Instructor", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>
                <button class="btn btn-primary ">@Html.ActionLink("Grade", "Grade", "Instructor", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>

            </td>
        </tr>
    }

</table>
