@model IEnumerable<Learning_site.Models.EnrolledCourse>

@{
    ViewBag.Title = "ShowEnrolledStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<table class="table">
    <tr>
        <th>
            <label>Student Name</label>
        </th>

        <th>
        <label>Assignments</label>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Student.Name)
        </td>

        <td>
            <button class="btn btn-primary ">@Html.ActionLink("Show All Assignmets", "GetAssign", "Instructor", new { id = item.StudentId }, new { style = "text-decoration:none;color:#FFFFFF" })</button>
    </td>

    </tr>
}

</table>
