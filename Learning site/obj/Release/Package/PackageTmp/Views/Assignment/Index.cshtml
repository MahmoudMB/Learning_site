@model IEnumerable<Learning_site.Models.Assignment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Assignments</h2>

<p>

    <button class="btn btn-primary btn1">@Html.ActionLink("Upload new Assignment", "Create", "Assignment",null, new { style = "text-decoration:none;color:#FFFFFF" })</button>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>


        <td>
            <button class="btn btn-primary ">@Html.ActionLink("Edit Assignment", "Edit", "Assignment", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>
            <button  class="btn btn-danger btn1">@Html.ActionLink("Delete Assignment", "Delete", "Assignment", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>
            
        </td>
    </tr>
}

</table>

