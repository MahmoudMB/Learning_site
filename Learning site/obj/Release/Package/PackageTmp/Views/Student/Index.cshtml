@model IEnumerable<Learning_site.Models.EnrolledCourse>

@{
    ViewBag.Title = "DisplayDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ALL student Courses</h2>




<table class="table">
    <tr>
        <th>Course</th>
        <th> Assignment </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course.name)
            </td>

            <td>


                <button class="btn btn-primary">@Html.ActionLink("Show Assignment", "Index", "Assignment", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>


            </td>

            <td></td>




        </tr>
    }

</table>








