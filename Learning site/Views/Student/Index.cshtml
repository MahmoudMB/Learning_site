@model IEnumerable<Learning_site.Models.EnrolledCourse>

@{
    ViewBag.Title = "DisplayDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Enrolled Courses</h2>



@foreach (var item in Model)
{
    <div class="new-block">
        <div class="row">
            <div class="col-md-12">
                <h4>Course: <span class="head-span">     @Html.DisplayFor(modelItem => item.course.name)</span></h4>
                <br />
                <h4>code: <span class="detail-span">  @Html.DisplayFor(modelItem => item.course.code)</span></h4>
               
              
                <button class="btn btn-primary">@Html.ActionLink("Show Assignment", "Index", "Assignment", new { id = item.CourseId }, new { style = "text-decoration:none;color:#FFFFFF" })</button>

                
            
            
            </div>
        </div>
    </div>



}





