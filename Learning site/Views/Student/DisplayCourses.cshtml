@model IEnumerable<Learning_site.Models.Course>

@{
    ViewBag.Title = "DisplayCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Courses</h2>
<script src="~/Scripts/customJs.js"></script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
          <label>Instructor Name</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.instructor.Name)
        </td>
        <td>
      
           
            <button  id ="EnrollBtn" class="EnrollBtn btn btn-primary">@Html.ActionLink("Enroll", "EnrollInCourse", new { id = item.Id }, new { style = "text-decoration:none;color:#FFFFFF" })</button>
           
      
        </td>
    </tr>
}

</table>


<script>



    $('#EnrollBtn').click(function () {
        // show when the button is clicked
        toastr.success('You are Enrolled');

    });

</script>